config DRM_JZ4740
	tristate "DRM Support for Ingenic JZ4740 SoC"
	depends on DRM
	depends on CMA
	depends on MIPS || COMPILE_TEST
	depends on OF
	select DRM_BRIDGE
	select DRM_PANEL_BRIDGE
	select DRM_KMS_HELPER
	select DRM_KMS_CMA_HELPER
	select DRM_GEM_CMA_HELPER
	select VT_HW_CONSOLE_BINDING if FRAMEBUFFER_CONSOLE
	help
	  Choose this option for DRM support for the Ingenic JZ4740 SoC.

	  If M is selected the module will be called jz4740-drm.
