config DRM_INGENIC
	tristate "DRM Support for Ingenic SoCs"
	depends on MIPS || COMPILE_TEST
	depends on DRM
	depends on CMA
	depends on OF
	select DRM_BRIDGE
	select DRM_PANEL_BRIDGE
	select DRM_KMS_HELPER
	select DRM_KMS_CMA_HELPER
	select DRM_GEM_CMA_HELPER
	select VT_HW_CONSOLE_BINDING if FRAMEBUFFER_CONSOLE
	help
	  Choose this option for DRM support for the Ingenic SoCs.

	  If M is selected the module will be called ingenic-drm.

config DRM_INGENIC_SLCD
	tristate "Smart LCD support for Ingenic SoCs"
	depends on DRM_INGENIC
	help
	  Choose this option to support Smart LCDs (MIPI DSI, etc)
	  on Ingenic SoCs.

	  If M is selected the module will be called ingenic-slcd.
